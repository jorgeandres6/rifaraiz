rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // helper to sanitize email to doc id (encode '@' and '.')
    function sanitizeEmail(e) {
      return e.split('@').join('%40').split('.').join('%2E');
    }

    // helper to check admin role by reading the user doc (safer than relying on auth token claims which require admin SDK changes)
    function isAdmin() {
      return request.auth != null && request.auth.token.email != null && get(/databases/$(database)/documents/users/$(sanitizeEmail(request.auth.token.email))).data.role == 'admin';
    }

    // Users collection: users manage their own document, but they cannot change their own role field
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.token.email != null && sanitizeEmail(request.auth.token.email) == userId;
      allow create: if request.auth != null && request.auth.token.email != null && sanitizeEmail(request.auth.token.email) == userId;
      allow update: if request.auth != null && request.auth.token.email != null && sanitizeEmail(request.auth.token.email) == userId && request.resource.data.role == resource.data.role;
      allow delete: if false; // don't allow deletes from client
    }

    // Raffles: public reads, only admins can create/modify
    match /raffles/{raffleId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Tickets: owners can create and read their tickets, admins can read all
    match /tickets/{ticketId} {
      allow create: if request.auth != null && request.resource.data.owner == request.auth.uid;
      allow read: if request.auth != null && (resource.data.owner == request.auth.uid || isAdmin());
      allow update, delete: if false;
    }

    // Commissions: users can read their own commissions; non-admin purchases may create commission documents for their upline;
    // only admins can update/delete or modify immutable fields.
    match /commissions/{docId} {
      // Create: allowed by admin OR by the sourceUser (the purchaser) under strict constraints
      allow create: if request.auth != null && (
        isAdmin() || (
          request.resource.data.sourceUserId == request.auth.uid
          && request.resource.data.userId is string
          && request.resource.data.amount is number
          && request.resource.data.amount >= 0
          && request.resource.data.level is int
          && request.resource.data.level >= 1
          && request.resource.data.level <= 3
          && request.resource.data.status == 'pending'
        )
      );

      // Read: admins can read all; users can read only their own
      allow read: if request.auth != null && (isAdmin() || request.auth.uid == resource.data.userId);

      // Update: only admins can update, and they must not change immutable fields like amount/userId/sourceUserId
      allow update: if isAdmin()
        && request.resource.data.userId == resource.data.userId
        && request.resource.data.sourceUserId == resource.data.sourceUserId
        && request.resource.data.amount == resource.data.amount;

      // Delete: only admins
      allow delete: if isAdmin();
    }

    // Default: deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}