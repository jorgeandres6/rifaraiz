rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection: users manage their own document
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // don't allow deletes from client
    }

    // Raffles: public reads, only admins can create/modify
    match /raffles/{raffleId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.role == 'ADMIN';
    }

    // Tickets: owners can create and read their tickets, admins can read all
    match /tickets/{ticketId} {
      allow create: if request.auth != null && request.resource.data.owner == request.auth.uid;
      allow read: if request.auth != null && (resource.data.owner == request.auth.uid || request.auth.token.role == 'ADMIN');
      allow update, delete: if false;
    }

    // Commissions: only admins can access
    match /commissions/{docId} {
      allow read, write: if request.auth != null && request.auth.token.role == 'ADMIN';
    }

    // Default: deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}